<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E9565"
    tools:context=".TelaLembretes">

    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:fontFamily="@font/aldrich"
        android:text="Lembretes"
        android:textAlignment="center"
        android:textColor="#A4EC90"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddLembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:backgroundTint="#527548"
        android:text="Adicionar Lembrete"
        android:textColor="#A3EB8F"
        android:textColorHighlight="#60C633"
        android:textColorHint="#64AA38"
        android:textColorLink="#64CC3F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>